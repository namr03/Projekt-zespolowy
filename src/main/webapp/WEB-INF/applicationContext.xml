<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.0.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
           http://www.springframework.org/schema/tx
           http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">


    <context:component-scan base-package="ATINS.SystemStudencki" />
    <context:annotation-config />



    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:mem:sosdb"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>



    <tx:annotation-driven />

    <bean id="entityManagerFactoryBean"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">

        <property name="dataSource" ref="dataSource" />


        <property name="packagesToScan" value="ATINS.SystemStudencki.model" />

        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <property name="showSql" value="true" />
                <property name="databasePlatform"
                          value="org.hibernate.dialect.HSQLDialect" />
            </bean>
        </property>

        <property name="jpaProperties">
            <props>
                <prop key="hibernate.hbm2ddl.auto">update</prop>
            </props>
        </property>

    </bean>

    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />

    <bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>

    <bean id="transactionManager"
          class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory"
                  ref="entityManagerFactoryBean" />
    </bean>

    <!-- DAO Beans -->
    <bean
		id="StudentDao"
		class="ATINS.SystemStudencki.dao.impl.StudentDaoImpl"
	/>
    <bean
		id="PrzedmiotDao"
		class="ATINS.SystemStudencki.dao.impl.PrzedmiotDaoImpl"
	/>
    <bean id="ZapisDao" class="ATINS.SystemStudencki.dao.impl.ZapisDaoImpl" />
    <bean id="OcenaDao" class="ATINS.SystemStudencki.dao.impl.OcenaDaoImpl" />
    <bean
		id="PlatnoscDao"
		class="ATINS.SystemStudencki.dao.impl.PlatnoscDaoImpl"
	/>
    <bean
		id="KsiazkaDao"
		class="ATINS.SystemStudencki.dao.impl.KsiazkaDaoImpl"
	/>
    <bean
		id="WypozyczenieDao"
		class="ATINS.SystemStudencki.dao.impl.WypozyczenieDaoImpl"
	/>
    <bean
		id="SylabusDao"
		class="ATINS.SystemStudencki.dao.impl.SylabusDaoImpl"
	/>
    <bean
		id="PlanZajecDao"
		class="ATINS.SystemStudencki.dao.impl.PlanZajecDaoImpl"
	/>
    <bean
		id="WykladowcaDao"
		class="ATINS.SystemStudencki.dao.impl.WykladowcaDaoImpl"
	/>
    <bean
		id="PowiadomienieDao"
		class="ATINS.SystemStudencki.dao.impl.PowiadomienieDaoImpl"
	/>

</beans>
